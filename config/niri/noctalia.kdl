// https://docs.noctalia.dev/getting-started/compositor-settings/#option-2-stationary-wallpaper
// Enable stationnay wallpaper
//
// need `background-color "transparent` in `layout` entry
// need to disable "Enable overview wallpaper‚Äù to be turned OFF in Noctalia's settings
layer-rule {
  match namespace="^noctalia-wallpaper*"
  place-within-backdrop true
}

layout {
    focus-ring {
        active-color   "#6ad3ff"
        inactive-color "#11131c"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#6ad3ff"
        inactive-color "#11131c"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#6ad3ff"
        inactive-color "#004d65"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#6ad3ff80"
    }
}
