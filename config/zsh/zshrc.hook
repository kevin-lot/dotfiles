autoload -U add-zsh-hook
chpwd_hook() {
    if [[ -f providers.tf || -f provider.tf ]]; then echo "mise: idiomatic_version_file_enable_tools for terraform should be enabled"; fi
    if [[ -f .nvmrc ]]; then echo "mise: idiomatic_version_file_enable_tools for node should be enabled"; fi
}
add-zsh-hook chpwd chpwd_hook
